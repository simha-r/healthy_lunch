= title 'Lunch Menu'
#menu_lunch
  = render 'location',category: 'lunch', cart_count: @cart.distinct_cart_count
  - if @menu.menu_date != Date.today
    = render 'customer/menus/menu_unavailable'

  .menu-row
    - @menu.menu_lunch_products.each do |menu_product|
      .col-xs-6
        .menu-card{'id'=>"menu_product_#{menu_product.id}"}
          = render 'customer/menus/menu_product_preview',menu_product: menu_product

  :javascript
     analytics.page('Lunch Menu');
     analytics.track('Signed Up', {
       plan: 'Startup',
       source: 'Analytics Academy'
     });
