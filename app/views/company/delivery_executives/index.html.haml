= title 'DeliveryExecutives Index'
.row
  .col-xs-2
    %h4 Name
  .col-xs-2
    %h4 Phone Number
  .col-xs-2
    %h4 Email

- @delivery_executives.each do |executive|
  .row
    .col-xs-2
      = executive.name
    .col-xs-2
      = executive.phone_number
    .col-xs-2
      = executive.email
    .col-xs-2
      - if executive.last_seen_delivery_executive_location
        = link_to "View Location",show_location_company_delivery_executive_path(executive),:target => "_blank"
    .col-xs-1
      = link_to 'Test Device',test_device_company_delivery_executive_path(executive)
    .col-xs-1
      - if current_company_user.has_role?(:admin)
        = link_to "Edit",edit_company_delivery_executive_path(executive),:target => "_blank"

  %br

%br
- if current_company_user.has_role?(:admin)
  .row
    .col-xs-3
    .col-xs-3
      = link_to 'ADD DELIVERY EXECUTIVE',[:new,:company,:delivery_executive]
