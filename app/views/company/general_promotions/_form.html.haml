= form_for [:company,@general_promotion] do |f|
  = f.label :name
  = f.text_field :name
  = f.label :promo_code
  = f.text_field :promo_code
  = f.label :description
  = f.text_field :description
  = f.label :amount
  = f.text_field :amount
