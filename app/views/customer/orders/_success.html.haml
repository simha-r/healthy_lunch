- if @order.persisted?
  .col-xs-12
    %p Thank you for placing order with us
    %p Your Order has been confirmed.
  .col-xs-12
    .col-xs-2
      %p User
    .col-xs-4
      %p= @order.user.name
  .col-xs-12
    .col-xs-2
      %p Delivery Address
    .col-xs-4
      %p= @order.address.formatted

  .col-xs-12
    .col-xs-2
      %p Total Amount
    .col-xs-4
      %p= @order.total_price

  .col-xs-12
    .col-xs-2
      %p Delivery Date
    .col-xs-4
      %p= @order.formatted_delivery_time

  .col-xs-12
    - if @order.prepaid_amount
      .col-xs-2
        %p Amount Paid
      .col-xs-4
        %p= @order.prepaid_amount

  .col-xs-12
    - if @order.cash_to_pay > 0
      .col-xs-2
        %p Amount to be paid
      .col-xs-4
        %p= @order.cash_to_pay
