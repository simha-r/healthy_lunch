= form_for  [:company,@product],:html => { :multipart => true } do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :desc
    = f.text_field :desc, :rows => 2
  .field
    = f.label :long_description
    = f.text_field :long_description, :rows => 4
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :cost_description
    = f.text_area :cost_description,cols: 60,rows: 10
  .field
    = f.file_field :photo



  .actions
    = f.submit 'Save'