%h4 General Promotion
.row
  .col-xs-2
    Name
  .col-xs-2
    Description
  .col-xs-2
    Amount
  .col-xs-2
    Promo Code
  .col-xs-2
    Created At
  .col-xs-2
    Updated At
  .col-xs-2
    Active
.row
  .col-xs-2
    = @general_promotion.name
  .col-xs-2
    = @general_promotion.description
  .col-xs-2
    = @general_promotion.amount
  .col-xs-2
    = @general_promotion.promo_code
  .col-xs-2
    = @general_promotion.created_at.strftime("%l:%M %p, %a  %-d %b")
  .col-xs-2
    = @general_promotion.updated_at.strftime("%l:%M %p, %a  %-d %b")
  .col-xs-2
    = @general_promotion.active
